<Window x:Class="StocksHelper.Views.NewStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StocksHelper.Views"
        mc:Ignorable="d"
        Title="NewStockView"
		Height="200"
		Width="500"
		FontSize="20">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="4*"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<DockPanel Margin="40">
			<TextBlock Text="Тикер акции:" VerticalAlignment="Center"/>
			<TextBox Width="200" Height="Auto" Text="{Binding NewStock.Symbol, UpdateSourceTrigger=PropertyChanged}"/>
		</DockPanel>
		<Button Grid.Row="1" Content="Добавить инструмент" FontSize="20" Command="{Binding AddStockCommand}"/>
	</Grid>
</Window>
